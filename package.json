{
  "name": "stars-schema",
  "version": "1.0.0",
  "description": "A mongoose schema plugin for implementing a stars rating system",
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "private": false,
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ichinga-Samuel/stars-schema.git"
  },
  "bugs": {
    "url": "https://github.com/Ichinga-Samuel/stars-schema/issues"
  },
  "homepage": "https://github.com/Ichinga-Samuel/stars-schema#readme",
  "keywords": [
    "mongoose",
    "mongodb",
    "stars",
    "rating",
    "schema",
    "plugins"
  ],
  "author": "Ichinga Samuel",
  "license": "MIT",
  "dependencies": {
    "mongoose": "^5.13.5"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "coveralls": "^3.1.1",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
